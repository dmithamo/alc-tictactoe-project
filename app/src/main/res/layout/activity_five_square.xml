<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dennis.tictactoe.MainActivity2">



    <LinearLayout
        android:layout_marginTop="@dimen/btn_margin_btm"
        android:id="@+id/boxes_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/box_11"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_12"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_13"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_14"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_15"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/boxes_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/boxes_1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/box_21"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_22"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:layout_marginEnd="@dimen/margin_box"
            android:layout_marginStart="@dimen/margin_box"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_23"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_24"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_25"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/boxes_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/boxes_2"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/box_31"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_32"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_33"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_34"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_35"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/boxes_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/boxes_3"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/box_41"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_42"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_43"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_44"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_45"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/boxes_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/boxes_4"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/box_51"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_52"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_53"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_54"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />

        <ImageView
            android:id="@+id/box_55"
            android:layout_width="@dimen/box_size_five"
            android:layout_height="@dimen/box_size_five"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/x_o_bg" />
    </LinearLayout>


    <TextView
        android:id="@+id/whose-move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/boxes_5"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/x_s_move"
        android:textAllCaps="true"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/text_color"
        android:textStyle="bold" />

    <Button
        android:id="@+id/restartGame"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/whose-move"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_btm"
        android:background="@drawable/button_bg"
        android:elevation="@dimen/elevation"
        android:onClick="restartGame"
        android:text="@string/restart_button_text"
        android:textAllCaps="true"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#fff"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/scores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/reset"
        android:layout_marginBottom="@dimen/margin_btm"
        android:elevation="@dimen/elevation"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/o_wins"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/score_text_size"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/o-wins"
            android:layout_width="@dimen/score_box_size"
            android:layout_height="@dimen/score_box_size"
            android:background="@drawable/dropdown_bg"
            android:gravity="center"
            android:text="@string/_0"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/score_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/draws"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/score_text_size"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/draws"
            android:layout_width="@dimen/score_box_size"
            android:layout_height="@dimen/score_box_size"
            android:background="@drawable/dropdown_bg"
            android:gravity="center"
            android:text="@string/_0"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/score_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/x_wins"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/score_text_size"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/x-wins"
            android:layout_width="@dimen/score_box_size"
            android:layout_height="@dimen/score_box_size"
            android:background="@drawable/dropdown_bg"
            android:gravity="center"
            android:text="@string/_0"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/score_text_size"
            android:textStyle="bold" />

    </LinearLayout>


    <Button
        android:id="@+id/reset"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_btm"
        android:background="@drawable/button_bg"
        android:elevation="@dimen/elevation"
        android:text="@string/reset_button_text"
        android:textAllCaps="true"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/btn_text_color"
        android:onClick="resetGame"
        android:textStyle="bold" />

</RelativeLayout>
